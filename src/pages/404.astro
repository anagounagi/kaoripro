---
import Layout from '../layouts/Layout.astro';
import { ArrowLeft } from 'lucide-react';

---

<Layout title="404: ページが見つかりません | Air Of Fragrance">
  <div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="text-center">
      <h1 class="text-6xl font-bold text-[#00796b] mb-4">404</h1>
      <h2 class="text-2xl font-semibold text-gray-700 mb-8">ページが見つかりません</h2>
      <a
        href="/"
        class="inline-flex items-center gap-2 bg-[#00796b] text-white px-8 py-3 rounded-full hover:bg-[#004d40] transition-colors"
      >
        <ArrowLeft className="w-5 h-5" />
        トップページへ戻る
      </a>
    </div>
  </div>
</Layout>